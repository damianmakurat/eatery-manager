<UserControl x:Class="eatery_manager.Views.ManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:eatery_manager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Podział na kolumny: 30% i 60% -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <!-- Układ wierszy tylko w lewej kolumnie -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Nagłówek -->
                <RowDefinition Height="*"/>
                <!-- Treść -->
            </Grid.RowDefinitions>

            <!-- Nagłówek -->
            <TextBlock Text="Zarządzanie aplikacją"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,10,0,10"
                       Grid.Row="0"/>

            <!-- Sekcja z opisem i przełącznikiem -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Usługa WWW:" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
                    <ToggleButton Width="60" Height="40" IsChecked="False"
                          Checked="ToggleButton_Checked"
                          Unchecked="ToggleButton_Unchecked">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border x:Name="border" Background="Red" BorderBrush="#999" BorderThickness="1" CornerRadius="4">
                                    <ContentPresenter x:Name="contentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="Green"/>
                                        <Setter TargetName="contentPresenter" Property="Content" Value="ON"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="False">
                                        <Setter TargetName="border" Property="Background" Value="Red"/>
                                        <Setter TargetName="contentPresenter" Property="Content" Value="OFF"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>
                </StackPanel>

                <!--<Button Content="Wskaż katalog strony"
                    Width="180"
                    Height="40"
                    Margin="0,10,0,0"
                    Click="SelectFolderButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                --><!-- tutaj ustawiasz stopień zaokrąglenia --><!--
                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>-->

            </StackPanel>
        </Grid>

        <!-- Prawa kolumna – logi z konsoli -->
        <TextBox Grid.Column="1"
                 Margin="10"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 FontFamily="Consolas"
                 FontSize="12"
                 IsReadOnly="True"
                 Text="{Binding Logs, UpdateSourceTrigger=PropertyChanged}" >
            
        </TextBox>
    </Grid>
</UserControl>
